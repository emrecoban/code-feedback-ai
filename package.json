{
  "name": "code-feedback-ai",
  "displayName": "code-feedback-ai",
  "description": "Realtime AI-powered feedback extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-feedback-ai.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "AI Code Feedback",
      "properties": {
        "codeFeedback.ai.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code analysis"
        },
        "codeFeedback.ai.provider": {
          "type": "string",
          "enum": [
            "openai",
            "gemini",
            "claude"
          ],
          "default": "openai",
          "description": "Select which AI provider to use"
        },
        "codeFeedback.gemini.apiKey": {
          "type": "string",
          "description": "Google Gemini API key"
        },
        "codeFeedback.gemini.model": {
          "type": "string",
          "default": "gemini-1.5-flash",
          "description": "Gemini model to use"
        },
        "codeFeedback.claude.apiKey": {
          "type": "string",
          "description": "Anthropic Claude API key"
        },
        "codeFeedback.claude.model": {
          "type": "string",
          "default": "claude-3-5-haiku-20241022",
          "description": "Claude model to use"
        },
        "codeFeedback.language": {
          "type": "string",
          "default": "english",
          "enum": [
            "english",
            "espanol",
            "turkce"
          ],
          "enumDescriptions": [
            "English",
            "Español",
            "Türkçe"
          ],
          "description": "Choose the language for AI feedback messages"
        },
        "codeFeedback.cursorAnalysisDelay": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "maximum": 10000,
          "description": "Delay in milliseconds before cursor analysis starts (1-10 seconds)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
